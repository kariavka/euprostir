{{#common/common-content}}
    <section class="sect-stories-list">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="name-stories-list">Пошук: {{q}}</p>
                </div>
            </div>
        </div>
        <div class="container cont2-sect-stories-list">
            <div class="row">

                <div class="col-md-9 col-sm-9">

                    {{#common/common-filters
                        filters=filters
                        defaultFilterLabel="Типом"
                        endpoint="search"
                        showDropdown=showDropdown
                        currentFilter=f}}
                    {{/common/common-filters}}

                    <div class="block1-stories-list"></div>

                    {{post/post-list-vertical
                        items=items
                        endpoint=endpoint}}

                    {{#if canLoadMore}}
                        <div class="text-center">
                            <div {{action "loadMore" }} class="btn btn-more btn-stories">
                                відкрити більше
                            </div>
                        </div>
                    {{/if}}

                </div>
            </div>
        </div>
    </section>
{{/common/common-content}}