{{#common/common-content}}
<section class="text-center">
    <img src="https://store.livarava.com/be8ea094-b732-11ec-91a0-5254a2021b2b.png" class="img-fluid"
        alt="Україна у війні">
</section>

<section class="sect-practices">

    <div class="block-category-container text-center">
        <div class="category-text">
            <p class="category-name category-name-practices">Новини</p>
            <p class="slogan-name slogan-name-practices"></p>
        </div>
    </div>

    <div class="container cont2-sect-practices">
        {{practice/practice-list-horizontal
        items=model.news
        endpoint="news.item"}}
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                {{#link-to "news.index" class="btn btn-more btn-practices"}}
                відкрити більше
                {{/link-to}}
            </div>
        </div>
    </div>

</section>

<section class="sect-stories">

    <div class="block-category-container text-center">
        <div class="category-text">
            <p class="category-name category-name-stories">Історії</p>
            <p class="slogan-name slogan-name-stories"></p>
        </div>
    </div>

    <div class="container-fluid cont2-sect-stories">
        {{story/story-list-slider
        class="story-list-slider"
        items=model.stories
        endpoint="stories.item"}}
    </div>

</section>

<section class="sect-opportunities mb-5">

    <div class="block-category-container text-center">
        <div class="category-text">
            <p class="category-name category-name-opportunities">Можливості</p>
            <p class="slogan-name slogan-name-opportunities"></p>
        </div>
    </div>

    <div class="container cont2-sect-opportunities">
        {{opportunity/opportunity-list-horizontal
        class="row"
        items=model.opportunities
        endpoint="opportunities.item"}}
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                {{#link-to "opportunities.index" class="btn btn-more btn-opportunities"}}
                відкрити більше
                {{/link-to}}
            </div>
        </div>
    </div>

</section>

{{/common/common-content}}