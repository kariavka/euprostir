<section class="sect-events">

  <div class="container">

    <div class="row">

      <div class="col-md-12">
        <p class="events-title">Події</p>
      </div>

    </div>

  </div>

  <div class="container cont2-sect-events">

    <div class="row">

      <div class="col-md-9 col-sm-9">

        {{event/event-filters
          class="filter"
          endpoint="events.index"
          showDropdown=showDropdown}}

        {{event/event-list-vertical
          items=items
          isLoading=model.items.isLoading}}

        {{#if canLoadMore}}
          <div class="text-center">
            <div {{action "loadMore"}}
              class="btn btn-more btn-events">
              відкрити більше
            </div>
          </div>
        {{/if}}

      </div>

      <div class="col-md-3 col-sm-3">
        <div class="block-popular">
          <div class="block-calendar">
            {{event/event-calendar}}
          </div>
        </div>
      </div>

    </div>

  </div>

</section>