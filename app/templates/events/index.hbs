<section class="sect-events">

  <div class="container">

    <div class="row">

      <div class="col-md-12">
        <p class="events-title">Події</p>
      </div>

    </div>

  </div>

  <div class="container cont2-sect-events">

    <div class="row">

      <div class="col-md-9 col-sm-9">

        {{!--<p class="t_cat">Перегляд за:</p>--}}
        {{!--<input name="" type="hidden" id="" value="Темою"><a class="trigger" href="#">Темою</a>--}}

        {{!--<div class="dropcontainer">--}}
        {{!--<ul class="dropdownhidden">--}}
        {{!--<li><a href="#">Темою</a></li>--}}
        {{!--<li><a href="#">Візії розвитку громадянського суспільства</a></li>--}}
        {{!--<li><a href="#">Соціальне підприємництво</a></li>--}}
        {{!--<li><a href="#">Соціальні послуги стратегії</a></li>--}}
        {{!--<li><a href="#">Управління організаціями</a></li>--}}
        {{!--<li><a href="#">Ефективні комунікації</a></li>--}}
        {{!--</ul>--}}
        {{!--</div>--}}

        {{!--<div class="block-select-date">--}}
        {{!--<input name="" type="hidden" id="" value="Датою"><a class="trigger" href="#">Датою</a>--}}

        {{!--<div class="dropcontainer">--}}
        {{!--<ul class="dropdownhidden">--}}
        {{!--<li><a href="#">Датою</a></li>--}}
        {{!--<li><a href="#">Дата 1</a></li>--}}
        {{!--<li><a href="#">Дата 2</a></li>--}}
        {{!--<li><a href="#">Дата 3</a></li>--}}
        {{!--<li><a href="#">Дата 4</a></li>--}}
        {{!--</ul>--}}
        {{!--</div>--}}

        {{!--</div>--}}

        {{!--<div class="year-events">2018</div>--}}

        {{common/common-filter
          class="filter"
          filters=filters
          endpoint="events.index"
          showDropdown=showDropdown
          currentFilter=f}}

        <div class="block-events">
          {{#each items as |item|}}
            {{#link-to "events.item" item.id}}
              <div class="block-event">
                <div class="row">
                  <div class="col-md-6 col-sm-12 col-12">

                    <div class="dates-event">

                      <div class="date1-event">
                        <div class="date1-event-day">{{moment-format item.created "DD"}}</div>
                        <div class="date1-event-month">{{moment-format item.created "MMM"}}</div>
                      </div>

                      <div class="date2-event">
                        {{!--<div class="date2-event-day">{{moment-format item.created "DD"}}</div>--}}
                        {{!--<div class="date2-event-month">{{moment-format item.created "MMM"}}</div>--}}
                      </div>

                    </div>

                    <div class="image-event" style="{{item.imageStyle}}"></div>

                  </div>

                  <div class="col-md-6 col-sm-12 col-12">

                    <div class="about-event">
                      <p class="title-event">{{item.title}}</p>
                      <p class="summary-event">{{item.summary}}</p>
                    </div>

                  </div>
                </div>
              </div>
            {{/link-to}}
          {{/each}}
        </div>

        {{#if canLoadMore}}
          <div class="text-center">
            <div {{action "loadMore"}}
              class="btn btn-more btn-events">
              відкрити більше
            </div>
          </div>
        {{/if}}

      </div>

      <div class="col-md-3 col-sm-3">
        <div class="block-popular">
          <div class="block-calendar">
            <img class="calendar" src="/images/calendar.jpg" alt="">
          </div>
        </div>
      </div>

    </div>

  </div>

</section>