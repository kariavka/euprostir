<section class="practice-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <img src="{{item.image_url}}" alt="" class="img-fluid" style="width: 100%; height: auto;">
        <div class="practice-title">{{item.title}}</div>
        <div class="practice-category">{{t "tips"}}</div>
      </div>
    </div>
  </div>
</section>

<section class="practice-body">
  <aside id="practice-aside" class="practice-aside">
    <div class="ml-3">
      <div>
        {{share/share-facebook
          item=item}}
      </div>
      <div class="mt-3">
        {{share/share-twitter
          item=item}}
      </div>
    </div>
  </aside>

  <div id="practice-article" class="container cont2-practice practice-article">
    <div class="row">
      <div class="col-md-4 col-sm-3">
        <div class="practice-time disp_n_768">
          <i class="fa fa-clock-o"></i> {{moment-format item.created "DD.MM.YYYY"}}
        </div>
      </div>
      <div class="col-md-7 col-sm-9">
        <div class="block-practice-right">
          {{{item.description}}}
        </div>
      </div>
    </div>
  </div>
</section>