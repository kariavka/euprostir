<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 px-0">
      <img src="{{item.image_url}}" alt="" class="img-fluid" style="width: 100%; height: auto;">
      <div class="position-absolute"
           style="top: 0px; left: 0px; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);">
        <div class="container d-flex" style="height: 100%;">
          <h1 class="text-center m-auto post-h1" style="color: #eeeeee; font-size: 2.5em; font-weight: normal;">
            {{item.title}}
          </h1>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <!-- Latest Posts -->
    <main class="post blog-post col-lg-12">
      <div class="container">
        <div class="row post-single">
          <div class="post-thumbnail col-lg-12 d-none">
            <img src="{{item.image_url}}" alt="" class="img-fluid">
          </div>
          <div class="post-details">
            <div class="post-meta d-flex justify-content-between">
              <div class="category d-none"><a href="#">Business</a><a href="#">Financial</a></div>
            </div>
            <h1 class="text-center d-none">{{item.title}}</h1>
            <div class="post-body col-lg-10 offset-lg-1">
              {{{item.description}}}
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- Sidebar was here -->
  </div>
</div>