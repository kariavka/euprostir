<section class="sect-practices-list">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p class="name-stories-list">Практики</p>
      </div>
    </div>
  </div>
  <div class="container cont2-sect-stories-list">
    <div class="row">

      <div class="col-md-9 col-sm-9">

        {{#common/common-filters
          class="filter"
          filters=filters
          endpoint="news.index"
          showDropdown=showDropdown
          currentFilter=f}}
          <li>{{#link-to 'page' 'best-practices'}}Кращі практики{{/link-to}}</li>
        {{/common/common-filters}}

        <div class="block1-stories-list"></div>

        {{post/post-list-vertical
          items=items
          endpoint="news.item"}}

        {{#if canLoadMore}}
          <div class="text-center">
            <div {{action "loadMore"}}
              class="btn btn-more btn-stories">
              відкрити більше
            </div>
          </div>
        {{/if}}

      </div>

    </div>
  </div>
</section>