<section class="sect-resources-list">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p class="name-resources-list">Ресурси</p>
      </div>
    </div>
  </div>
  <div class="container sect-resources-list-cont2">
    <div class="row">

      <div class="col-md-9 col-sm-9">

        {{resource/resource-filters
          endpoint="resources.index"
          subject=s type=t}}

        {{resource/resource-list-vertical
          items=items
          endpoint="resources.item"}}

        {{#if canLoadMore}}
          <div class="text-center">
            <div {{action "loadMore"}}
              class="btn btn-more btn-resources">
              відкрити більше
            </div>
          </div>
        {{/if}}

      </div>

      <div class="col-md-3 col-sm-3">
        <div class="block-popular">
        </div>
      </div>
    </div>
  </div>
</section>